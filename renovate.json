{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Dockerfile$/"
      ],
      "matchStrings": [
        "# renovate: datasource=custom\\.nordvpn\\s+ARG NORDVPN_VERSION=(?<currentValue>[0-9.]+)"
      ],
      "datasourceTemplate": "custom.nordvpn",
      "depNameTemplate": "nordvpn",
      "versioningTemplate": "semver"
    }
  ],
  "customDatasources": {
    "nordvpn": {
      "defaultRegistryUrlTemplate": "https://repo.nordvpn.com/deb/nordvpn/debian/dists/stable/main/binary-amd64/Packages",
      "format": "plain",
      "transformTemplates": [
        "{\"releases\":[{\"version\":\"{{#if (containsString body 'Version: ')}}{{regexCapture 'Version:\\s+([0-9.]+)' body 1}}{{/if}}\"}]}"
      ]
    }
  }
}
